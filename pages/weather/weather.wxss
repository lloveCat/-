/* pages/weather/weather.wxss */
/*顶部容器 */
.allContainer{
  /* background-color: black; */
  background-image: url('https://cn.bing.com/th?id=OHR.AurovilleIndia_ZH-CN4983141175_1920x1080.jpg&rf=NorthMale_1920x1081920x1080.jpg');
  background-size:  auto;
  color: white;
}

.topContainer{
  width: 100%;
  height: 30px;
  margin:10px 0 5px 0;
  /* background-color: blue; */
  position:relative;
  text-align: center;
}

.more{
  position: absolute;
  width: 40px;
  height: 25px;
  font-size: 14px;
  left: 10px;
  top: 5px;
  text-align: left;
  /* display: inline-block; */
  /* background-color: red; */
}

.lastTime{
  position: absolute;
  width: auto;
  height: 25px;
  font-size:14px;
  right: 5px;
  /* display: inline-block; */
  top: 5px;
  text-align: center;
}

/*当天天气容器 */
.todayContainer{
  width: 50%;
  height: auto;
  position:relative;
  /* background-color:yellow; */
  left: 50%; 
  text-align: right;
}
.todayTem{
  margin:10px 10px 0 0;
  font-size: 40px;
  display: block;
}
.cond{
  margin:5px 10px 0 0;
  font-size: 20px;
}
.wind{
  margin:5px 10px 0 0;
  font-size: 12px;
}

/*预报/空气质量容器 */
.forecastContainer,.aqiContainer{
  width: 90%;
  height: auto;
  margin: 10px auto;
  padding: 10px 5px 5px 10px;
  /* background: green; */
  position: relative;
  font-size: 12px;
}
.dailyText,.aqiText{
  font-size: 24px;
  display: block;
}

/*预报内容 */
.dailyClass{
  width: 100%;
  background: #8000;
  position: relative;
  margin:7px 0px;
  text-align: center;
  font-size: 18px;
}
.dailyData{
  width: auto;
  position: absolute;
  left: 0px;
}
.dailyCond{
  font-size: 16px;
}
.dailyTmp{
  width: auto;
  position:absolute;
  right: 0px;
}

/*空气质量内容 */
.aqi{
  margin-left: 20%;
  display: inline-block;
}
.pm25{
  position: absolute;
  display: inline-block;
  right: 20%;
}
.Num{
  width: 100%;
  text-align: center;
  font-size: 32px;
  display: block;
}
/*建议内容 */
.suggesetionContainer{
  width: 90%;
  height: auto;
  margin: 10px auto;
}
.suggestionText{
  font-size: 24px;
  display: block;
  margin: 10px 0;
}
.suggestionContent{
  font-size: 14px;
  margin: 10px 0;
}

/*更多悬浮窗 */
.hiddenClass{
  position: absolute;
   font-size: 14px;
  left:10px;
  top:30px;
  width:80px;
  text-align: left;
  background-color: rgb(114, 127, 155);
  opacity: 0.5;
}
.deleteCountry{
  display: inline-block;
  margin: 5px 10px 0 5px;
  opacity: 1;
}
.chooseCountry{
  position: absolute;
  display: inline-block;
  right: 5px;
  margin-top:5px;
  opacity: 1;
}
.addCountry{
  margin:5px auto;
  text-align: center;
  opacity: 1;
}
